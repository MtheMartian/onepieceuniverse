<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="css/style.css">
  <title>One Piece Universe</title>
</head>
<body>
  <h1>ONE PIECE UNIVERSE</h1>
    <section id="cardSection">
      <%for(let i = 0; i < info.length; i++){%>
        <div class="characterCard" id=<%=info[i].id%>>
          <img src=<%=info[i].imgURL%>>
          <div>
          <span><%=info[i].charName%></span>
          </div>
          <span><%=info[i].charAge%> years old</span>
          <div>
          <span><%=info[i].charhaki%></span>
          <span><%=info[i].charFruit%></span>
          </div>
          <span class="characterInfo">See more</span>
          <button class="editCard" id=<%=info[i].id%>>Edit</button>
        </div>
      <%}%>
      <form class="hidden addCharacter" action="/addCharacter" method="POST">
        <input type="text" placeholder="Character Name" name="charName" class="createChar">
        <input type="text" placeholder="Character Age" name="charAge" class="createChar">
        <input type="text" placeholder="Fruit Name" name="charFruit" class="createChar">
        <input type="text" placeholder="Haki Strength/Type" name="charHaki" class="createChar">
        <input type="text" placeholder="Image URL" name="imgURL" class="createChar">
        <input id="addCharBtn" type="submit">
        <button class="closeIt">X</button>
      </form>
      <div class="updateCard hidden">
        <input type="text" id="charNameU" class="cardDisplayInfo" placeholder="Character Name">
        <input type="text" id="charAgeU" class="cardDisplayInfo" placeholder="Character Age">
        <input type="text" id="charFruitU" class="cardDisplayInfo" placeholder="Fruit Name">
        <input type="text" id="charHakiU" class="cardDisplayInfo" placeholder="Haki Strength/Type">
        <input type="text" id="imgURLU" class="cardDisplayInfo" placeholder="Image URL">
        <button id="updateCardBtn">Update</button>
        <button id="deleteCard">Remove</button>
        <button class="closeIt">X</button>
      </div>
    </section>
    <nav id="navigation">
      <ul>
        <li>
          <button id="createChar">Add Character</button>
        </li>
        <li>Marine World</li>
        <li>Sign In</li>
      </ul>
    </nav>

    <div id="characterMoreInfo">
      <h1 id="seeMoreCharName"></h1>
    </div>
  <script src="js/main.js"></script>
</body>
</html>